<UserControl x:Class="EthWidget.EthPriceUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EthWidget" xmlns:svgc1="http://sharpvectors.codeplex.com/svgc/"
             mc:Ignorable="d" 
             d:DesignHeight="66" d:DesignWidth="272">
    <Grid>
        <Border BorderThickness="1,1,1,1" BorderBrush="Black" CornerRadius="10" Margin="10,0,10,0">
            <StackPanel  Orientation="Horizontal">
                <svgc1:SvgViewbox Margin="20,0,0,0" Width="30" Source="pack://application:,,,/Images/ethereumLogo.svg"/>
                <StackPanel>
                    <Label Content="ETH PRICE" Foreground="#FF8E8A8F" Margin="0,5,0,0"  FontSize="12" FontFamily="Arial Black"/>
                    <Label x:Name="labelEthPrice" Content="$ーー ❙ ーー BTC" Margin="0,5,0,0" FontSize="12" FontFamily="Arial Black"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
