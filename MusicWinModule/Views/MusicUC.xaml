<UserControl x:Class="MusicWinModule.Views.MusicUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicWinModule.Views" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             Height="90" Width="280">
    <Border BorderThickness="1,1,1,1" BorderBrush="Black" CornerRadius="10">
        <StackPanel  Orientation="Horizontal">
            <Border BorderThickness="1,1,1,1" BorderBrush="Black" Width="75" Height="75" CornerRadius="10" Margin="10,0,5,0">
                <Border.Background>
                    <ImageBrush x:Name="thumbnail"/>
                </Border.Background>
            </Border>
            <fa:ImageAwesome Icon="Table"/>
        </StackPanel>
    </Border>
</UserControl>
