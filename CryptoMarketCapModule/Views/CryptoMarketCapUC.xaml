<UserControl x:Class="CryptoMarketCapModule.Views.CryptoMarketCapUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CryptoMarketCapModule.Views" xmlns:converters="clr-namespace:CryptoMarketCapModule.Converters" xmlns:fa="http://schemas.fontawesome.io/icons/"
             Height="50" Width="280"
             Margin="0,0,0,15">
    <UserControl.Resources>
        <converters:MarketCapToStringConverter x:Key="converter"/>
    </UserControl.Resources>
    <Border BorderThickness="1,1,1,1" BorderBrush="Black" CornerRadius="10">
        <StackPanel  Orientation="Horizontal">
            <fa:ImageAwesome Icon="BarChart" Foreground="DarkSlateBlue" Margin="20,0,5,0" Width="35" Height="50" />
            <StackPanel>
                <Label Content="CRYPTO MARKET CAP" Foreground="#FF8E8A8F" FontSize="12" FontFamily="Arial Black"/>
                <Label Content="{Binding MarketCap, FallbackValue=ーー, Converter={StaticResource converter}}" ContentStringFormat="${0}" FontSize="13" FontFamily="Arial Black"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
